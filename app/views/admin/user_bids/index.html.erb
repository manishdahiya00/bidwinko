<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <p id="notice" style="color:orange;"><%= notice %></p>
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Listing Users Bids</h2>
      </div>
      <% if @userBids.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Bids</th>
              <th>User</th>
              <th>Bid Offer</th>
              <th>Created At</th>
              <th>Updated At</th>
            </tr>
          </thead>
          <tbody>
            <% @userBids.each do |bids| %>
              <tr>
                <td><%= bids.id %></td>
                <td><%= bids.bids %></td>
                <td><a href="/admin/users/<%= bids.user_id %>"><%= bids.user.social_email %></a></td>
                <td><a href="/admin/bid_offers/<%= bids.bid_offer_id %>"><%= bids.bid_offer.offer_name %></a></td>
                <td><%= bids.created_at.strftime("%d/%m/%y %I:%M %p") %></td>
                <td><%= bids.updated_at.strftime("%d/%m/%y %I:%M %p") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @userBids %>
      <% else %>
        <h1 class="not-found">No User Bids Found</h1>
      <% end %>
    </div>
  </div>
</div>
