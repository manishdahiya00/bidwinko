<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Bid Plan Categories</h2>
      </div>
      <div class="new" style="margin-bottom: 15px;">
        <%= link_to "New Bid Plan Category", new_admin_bid_plan_category_path, class: "btn btn-primary" %>
      </div>
      <% if @bidPlanCategories.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Title</th>
              <th>Status</th>
              <th>Created At</th>
              <th>Updated At</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @bidPlanCategories.each do |bidPlanCategory| %>
              <tr>
                <td><%= bidPlanCategory.id %></td>
                <td><%= bidPlanCategory.title %></td>
                <td>
                  <% if bidPlanCategory.status == false %>
                    <p>❌</p>
                  <% else %>
                    <p>✔️</p>
                  <% end %>
                </td>
                <td><%= bidPlanCategory.created_at %></td>
                <td><%= bidPlanCategory.updated_at %></td>
                <td style="display:flex;gap:5px">
                  <%= link_to 'Edit', edit_admin_bid_plan_category_path(bidPlanCategory), class: "btn btn-warning" %>
                  <%= button_to 'Delete', admin_bid_plan_category_path(bidPlanCategory), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @bidPlanCategories %>
      <% else %>
        <h1 class="not-found">No Bid Plan categories Found</h1>
      <% end %>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
