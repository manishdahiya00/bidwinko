<div class="container">
  <%= form_with(model: @bidPlan, url: admin_bid_plan_path) do |form| %>
    <% if @bidPlan.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@bidPlan.errors.count, "error") %> prohibited this bid plan from being saved:</h2>
        <ul>
          <% @bidPlan.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <!-- /.row -->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            Basic Form Elements
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                  <div class="form-group">
                    <label>Category</label>
                    <%= form.select :bid_plan_category_id, options_for_select(BidPlanCategory.all.pluck(:title, :id), @bidPlan.bid_plan_category_id),{} ,class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <label>Number Of Bids</label>
                    <%= form.text_field :number_of_bids, class: "form-control", placeholder: "Enter Number Of Bids" %>
                  </div>
                  <div class="form-group">
                    <label>Off Percentage</label>
                    <%= form.text_field :off_percentage, class: "form-control", placeholder: "Enter Off Percentage" %>
                  </div>
                  <div class="form-group">
                    <%= form.submit "Update", class: "btn btn-primary" %>
                    <%= link_to 'Back', admin_bid_plans_path, class: "btn btn-default" %>
                  </div>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <div class="form-group">
                    <label>Plan Price</label>
                    <%= form.text_field :plan_price, class: "form-control", placeholder: "Enter Plan Price" %>
                  </div>
                  <div class="form-group">
                    <label>Expires In</label>
                    <%= form.text_field :expires_in, class: "form-control", placeholder: "Enter Expires In" %>
                  </div>
                  <div class="form-group">
                    <label>Status</label>
                    <%= form.select :status, [['Active', true], ['Inactive', false]],{} ,class: 'form-control' %>
                  </div>
                </div>
              </div>
              <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
    <% end %>
  </div>
