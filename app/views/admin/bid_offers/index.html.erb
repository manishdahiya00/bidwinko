<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Bid Offers</h2>
      </div>
      <div class="new" style="margin-bottom: 15px;">
        <%= link_to "New Bid Offer", new_admin_bid_offer_path, class: "btn btn-primary" %>
      </div>
      <% if @bidOffers.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Image Url</th>
              <th>Action Url</th>
              <th>Status</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Created At</th>
              <th>Updated At</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @bidOffers.each do |offer| %>
              <tr>
                <td><%= offer.id %></td>
                <td><% offer.offer_image_url.split(",").each do |image| %><img style="width:40px;" src="<%= image %>" onerror="this.onerror=null;this.src='https://cdn.pixabay.com/photo/2014/03/24/17/21/wrong-295503_640.png';" /><% end %></td>
                <td><%= offer.offer_name %></td>
                <td>
                  <% if offer.status == false %>
                    <p>❌</p>
                  <% else %>
                    <p>✔️</p>
                  <% end %>
                </td>
                <td><%= offer.started_at.strftime("%d/%m/%y %I:%M %p") %></td>
                <td><%= offer.ended_at.strftime("%d/%m/%y %I:%M %p") %></td>
                <td><%= offer.created_at.strftime("%d/%m/%y %I:%M %p") %></td>
                <td><%= offer.updated_at.strftime("%d/%m/%y %I:%M %p") %></td>
                <td style="display:flex;gap:5px">
                  <%= link_to 'Show', admin_bid_offer_path(offer), class: "btn btn-primary" %>
                  <%= link_to 'Edit', edit_admin_bid_offer_path(offer), class: "btn btn-warning" %>
                  <%= button_to 'Delete', admin_bid_offer_path(offer), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @bidOffers %>
      <% else %>
        <h1 class="not-found">No Bid Offers Found</h1>
      <% end %>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
